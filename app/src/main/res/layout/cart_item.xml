<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cart_item"
    android:orientation="horizontal"
    android:background="@drawable/card_with_border"
    android:weightSum="6">



    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/checkboxCartItem"
       />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="2"
            android:id="@+id/cartItemImageView"
            android:src="@drawable/jasmine_image"
            android:background="@drawable/buy_now_card_btn"
            />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_marginStart="2dp"
        android:layout_weight="2"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jasmine Plant"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/app_color_dark2"
            android:id="@+id/cartPlantNameTextView"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="500 Tk"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/app_color_dark2"
            android:id="@+id/cartPlantPriceTextView"
            android:layout_marginTop="2dp"
            />
            
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:gravity="center_horizontal"
        android:layout_marginEnd="2dp"
        >

        <Button
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="+"
            android:textSize="25sp"
            android:backgroundTint="@color/app_color_dark"
            android:id="@+id/btnIncrease"
            android:layout_gravity="center"
            android:padding="10dp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/tvQuantity"
            android:background="@drawable/card_with_border"
            android:text="2"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/app_color_dark"
            android:layout_gravity="center"
            android:padding="10dp"
            android:layout_margin="5dp"
            />

        <Button
            android:id="@+id/btnDecrease"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/app_color_dark"
            android:text="-"
            android:textSize="25sp"
            android:padding="10dp"/>

    </LinearLayout>


</LinearLayout>