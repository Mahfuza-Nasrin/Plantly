<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DescriptionActivity"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/app_color"
    android:weightSum="4">


<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:contentDescription="back"
    android:src="@drawable/ic_arrow_back"
    android:padding="10dp"
    android:background="@drawable/border"
    android:id="@+id/btnArrowBack"/>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:src="@drawable/jasmine_image"
        android:layout_gravity="end"
        android:background="@drawable/description_image_card"
        android:id="@+id/descriptionPlantImageView"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Outdoor"
        android:textColor="@color/app_color_dark"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"/>

       <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        >


        <TextView
            android:id="@+id/plantNameDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jasmine Plant"
            android:textColor="@color/app_color_dark"
            android:textSize="25sp"
            android:textStyle="bold"
            android:background="@drawable/card_with_border"
            android:padding="5dp"
            android:layout_gravity="center"
            android:textAppearance="@android:style/TextAppearance.Large"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/card_with_border"
            android:padding="5dp"
            android:src="@drawable/ic_heart"
            android:layout_gravity="center"
            android:layout_marginStart="140dp"
            android:id="@+id/descriptionPlantHeart"

            />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/tvPlantPrice"
        android:text="500 Tk"
        android:background="@drawable/border"
        android:textSize="24sp"
        android:layout_margin="5dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:padding="5dp"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="20dp"
        android:layout_margin="5dp"
        >

        <Button
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="+"
            android:textSize="25sp"
            android:backgroundTint="@color/app_color_dark"
            android:id="@+id/btnIncrease"
            android:layout_gravity="center"
            android:padding="10dp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/tvQuantity"
            android:background="@drawable/card_with_border"
            android:text="2"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/app_color_dark"
            android:layout_gravity="center"
            android:padding="10dp"
            android:layout_margin="5dp"
            />

        <Button
            android:id="@+id/btnDecrease"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/app_color_dark"
            android:text="-"
            android:textSize="25sp"
            android:padding="10dp"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lavenderDescription"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:id="@+id/plantDescription"
        android:layout_marginBottom="20dp"
        tools:ignore="VisualLintLongText"
        android:textSize="16sp"
        />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="2"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:focusable="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/buy_now_card_btn"
        android:padding="15dp"
        android:id="@+id/btnBuyNow"
        android:clickable="true"
        android:layout_marginEnd="10dp"
        >

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_shopping_bag"
            app:tint="@color/white"
            android:layout_marginEnd="2dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BUY NOW"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:fontFamily="sans-serif-medium" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/add_to_cart_btn_card"
        android:padding="15dp"
        android:id="@+id/btnAddToCart"
        android:clickable="true"
        android:layout_weight="1"
        android:layout_marginStart="10dp"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_cart"
            app:tint="@color/white"
            android:layout_marginEnd="2dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADD TO CART"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:fontFamily="sans-serif-medium" />
    </LinearLayout>

</LinearLayout>



</LinearLayout>



